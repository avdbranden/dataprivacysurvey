<div id="rapport-title">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-md-10 col-md-offset-1">
        <h1>Compliance Rapport</h1>
      </div> <!-- .cols-xs-12 col-md-10 col-md-offset-1 -->
    </div> <!-- .row -->
  </div> <!-- .container -->
</div> <!-- #rapport-title -->

<div id="rapport-resume">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12 col-md-4 col-md-offset-1">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2>Directive 95/46</h2>
          </div> <!-- .panel-heading -->
          <div class="panel-body">
            <h3>Compliance level</h3>
            <div class="compliance-result">
              <h3 id="dir_percentage"><%= number_with_precision(@compliance_directive_percentage, precision: 2, strip_insignificant_zeros: true) %>%</h3>
            </div>
            <div class="compliance-bar">
              <div class="compliance-bar-progress compliance-bar-dir">
              </div>
            </div> <!-- .compliance-bar -->
          </div> <!-- .panel-body -->
        </div> <!-- .panel -->
      </div> <!-- .cols-xs-12 col-md-10 col-md-offset-1 -->

      <div class="col-xs-12 col-md-4 col-md-offset-2">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2>Regulation 679</h2>
          </div> <!-- .panel-heading -->
          <div class="panel-body">
            <h3>Compliance level</h3>
            <div class="compliance-result">
              <h3 id="reg_percentage"><%= number_with_precision(@compliance_regulation_percentage, precision: 2, strip_insignificant_zeros: true) %>%</h3>
            </div>
            <div class="compliance-bar">
              <div class="compliance-bar-progress compliance-bar-reg">
              </div>
            </div> <!-- .compliance-bar -->
          </div> <!-- .panel-body -->
        </div> <!-- .panel -->
      </div> <!-- .cols-xs-12 col-md-10 col-md-offset-1 -->

    </div> <!-- .row -->
  </div> <!-- .container -->
</div> <!-- #rapport-resume -->

<div id="rapport-answers">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <% @survey.answers.all.each do |answer| %>
          <div class="container">
            <div class="row">
              <div class="col-xs-12 col-md-8 col-md-offset-2">
                <div class="answer">
                  <% if answer.compliant == true %>
                    <div class="panel">
                      <div class="panel-heading good_answer">
                        <h4><%= answer.good_answer_text %></h4>
                      </div>
                    </div>
                  <% elsif answer.compliant == false %>
                    <div class="panel">
                      <div class="panel-heading bad_answer">
                        <h4><%= answer.bad_answer_text %></h4>
                      </div>
                    </div>
                  <% end %>
                </div> <!-- .answer -->
              </div>
            </div>
          </div>
        <% end%> <!-- @survey.answers-->
      </div> <!-- .col-xs-12 -->
    </div> <!-- .row -->
  </div> <!-- .container -->
</div> <!-- #rapport-answers -->
